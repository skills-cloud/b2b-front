.avatar {
    display: block;
    border-radius: 50%;
    width: 48px;
    height: 48px;
    min-width: 48px;
    min-height: 48px;
    background-color: #c4c4c4;
    overflow: hidden;

    &_small {
        width: 40px;
        height: 40px;
        min-width: 40px;
        min-height: 40px;
    }
}
