.action {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    fill: var(--color-gray-100);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--color-bg-button);

    @media (hover: hover) and (pointer: fine) {

        &:hover {
            cursor: pointer;
        }
    }
}
