.header {
    font-family: Montserrat, sans-serif;
    font-weight: bold;
    line-height: 1.3;
    color: var(--color-text-dark);
}

.header_level-1 {
    font-size: 24px;
}

.header_level-2 {
    font-size: 20px;
}

.header_level-3 {
    font-size: 16px;
    line-height: 1.25;
}

.header_level-4 {
    font-size: 14px;
}

.header_contrasted {
    color: var(--color-black);
}
