.edit-dictionary-item {
    display: grid;
    grid-row-gap: 24px;
    padding: 32px;

    &__title {
        font-weight: bold;
        font-size: 24px;
        line-height: 30px;
        color: var(--color-text-dark);
    }

    &__text {
        font-weight: normal;
        font-size: 16px;
        line-height: 20px;
        color: var(--color-text-dark);
    }

    &__buttons {
        display: grid;
        grid-auto-flow: column;
        grid-gap: 24px;
        margin-top: 8px;
    }
}
