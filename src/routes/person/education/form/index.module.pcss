.education-form {
    display: grid;
    font-family: Roboto, sans-serif;
    font-size: 14px;
    line-height: 1.4;
    grid-gap: 24px;
}

.education-form__item {
    display: grid;
    grid-auto-flow: column;
    grid-template-columns: 104px 1fr;
    grid-gap: 32px;
    align-items: baseline;
}

.education-form__item_dates {
    grid-template-columns: 104px 1fr auto 1fr;
}

.education-form__label {
    font-weight: 500;
}
