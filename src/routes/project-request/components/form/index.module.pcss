.form {
    display: grid;
    grid-gap: 24px;
}

.field-group {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 24px;
}

.separator {
    display: block;
    margin: 8px -32px 0;
    height: 1px;
    background-color: var(--color-separator-default);
}

.submit-wrapper {
    display: flex;
    justify-content: flex-end;
}
