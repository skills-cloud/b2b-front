
.actions {
    display: grid;
    grid-gap: 16px;
    grid-template-columns: auto auto auto;
}

.gap-bottom {
    margin-bottom: 12px;
}

.position {
    display: grid;
    grid-template-columns: 1fr auto;
    grid-gap: 16px;
}

.position-edit {

    @media (hover: hover) and (pointer: fine) {
        cursor: pointer;
    }
}

.icon-dots {
    fill: var(--color-gray-100);
}

.add-role {
    color: var(--color-button-secondary-text);
    font-family: Roboto, sans-serif;
    font-size: 14px;
}
