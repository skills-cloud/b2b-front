.linked {

    &__users {
        display: grid;
        grid-gap: 24px;
    }

    &__users-modal {
        max-height: 500px;
        overflow: scroll;
    }

    &__modal-header-text {
        font-family: Montserrat, sans-serif;
        font-style: normal;
        font-weight: bold;
        font-size: 24px;
        line-height: 32px;
        color: var(--color-text-dark);
    }
}
